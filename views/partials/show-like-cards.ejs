<div
    class="show-like-card-modal h-[-webkit-fill-available] sm:h-[calc(100vh)] w-[100%] z-[999] absolute top-[0px] left-0 hidden">
    <div
        class="show-like-post-contents h-[58%] w-[73vw] xl:w-[50vw] relative top-10 left-10 rounded-[6px] cursor-default bg-gray-700 overflow-hidden">
        <div class="show-likePost-container-heading h-[35px] w-full shadow-lg flex items-center justify-between ">
            <div class="heading-text p-4">
                My Likes
            </div>
            <div class="h-full w-fit py-[5px] px-[8px]">
                <i class="show-like-post-container-close ri-close-large-line cursor-pointer"></i>
            </div>
        </div>
        <div
            class="show-post-container flex flex-wrap items-start gap-[25px] h-[calc(100%-35px)] w-full px-6 py-[1.5rem] overflow-auto">
            <% user.likedPosts.forEach((likedPost)=>{ %>
                <div class="show-like-post w-[200px] group hover:cursor-pointer" id="post-<%= likedPost._id %>">
                    <div class="bg-[#3c3c3c] w-[200px] h-[175px] rounded-xl overflow-hidden relative">
                        <!-- <div id="delete"
                            class="bg-red-100 absolute top-0 right-0 m-2 scale-[1.2] rounded-[8px] z-[1] hidden group-hover:block"
                            onclick="delete_post('<%= likedPost._id %>')">
                            <i class="ri-delete-bin-7-fill text-black p-[2px] hover:text-red-500"></i>
                        </div> -->
                        <% if (likedPost.postImage.mimeType.startsWith('image/')) { %>
                            <img src="<%= likedPost?.postImage.url %>" alt="Post is of <%= likedPost.title %>"
                                class="w-full h-full object-cover" />
                            <% } else if (likedPost.postImage.mimeType.startsWith('video/')) { %>
                                <video controls class="w-full h-full object-cover"
                                    src="<%= likedPost.postImage.url %>"></video>
                                <% } else { %>
                                    <p>Unsupported file type.</p>
                                    <% } %>
                    </div>
                    <h3 class="text-base text-slate-200 my-1">
                        <%= likedPost.title %>
                    </h3>
                </div>
                <% }) %>
        </div>
    </div>
</div>
<script src="./javascripts/postDelete.js" defer></script>