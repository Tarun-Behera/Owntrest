<div class="post-container-modal w-[100%] h-[100svh] z-[999] absolute top-[-80px] left-[0]  hidden  flex  items-center justify-center ">
        <div
        class="post-container h-[80%]  bg-[#3c3c3c] border-2 border-gray-400 rounded-md ">
        <h1 class="text-[25px] text-center py-2 opacity-80 ">Create a new Post</h1>
        <hr class="opacity-10">
        <section class=" w-full h-[80%] flex justify-center items-center overflow-auto px-10">
            <div class="flex justify-center items-center">
                <form id="postImage-form" enctype="multipart/form-data">
                    <div class="flex flex-wrap justify-center items-center gap-10">
                        <div class="  flex justify-center items-center ">
                            <div class="upld-post">
                                <div class="relative">
                                    <span id="postImg-icon"
                                        class="absolute right-0 bottom-0 h-10 w-10 bg-[#3c3c3c] rounded-full flex justify-center items-center cursor-pointer h-9 w-9 border-2 border-gray-400 hover:text-sky-300 hover:border-sky-400  hover:bg-sky-30 z-[999] ">
                                        <i class="ri-add-line scale-[1.5] "></i>
                                    </span>
                                    <div class="mb-3 w-[294px] h-[294px] rounded-xl shadow-lg mx-auto overflow-hidden bg-gray-700 " id="preview">
                                        <span class="flex justify-center items-center w-full h-full text-center select-none">
                                            Click on Plus icon <br> to select <br> Image or Video
                                        </span>
                                    </div>
                                </div>
                                <input class=" block hidden" id="post-img" name="postImage" accept="image/*,video/*"
                                    onchange="previewFile(this)" type="file" >
                            </div>
                        </div>
                        <div class="post-details w-[400px]">
                            <input class=" w-full mt-4 text-black rounded-md py-1 px-1" type="text" name="title"
                                placeholder="title">
                            <textarea class="block mt-4 text-black rounded-md py-1 px-1 w-full h-[110px]"
                                name="Description" id="description" placeholder="Description"></textarea>
                            <input class=" publish block mt-4 mx-auto bg-red-500 px-8 py-2 rounded-md" type="submit"
                                value="Publish">
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>